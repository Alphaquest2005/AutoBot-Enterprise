<UserControl x:Class="WaterNut.Views.SalesReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:QS="clr-namespace:WaterNut.QuerySpace.AllocationQS.ViewModels"
             xmlns:d="http://schemas.microsoft.com/Expression/blend/2008"
             xmlns:local="clr-namespace:WaterNut"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="525"
             d:DesignWidth="1056"
             mc:Ignorable="d">
    <UserControl.Resources>
        <x:Static x:Key="SalesReportModelDataSource" Member="QS:SalesReportModel.Instance" />
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" DataContext="{Binding Source={StaticResource SalesReportModelDataSource}}">
        <Border x:Name="ReportBRD"
                Width="1056"
                Margin="0,45,0,-42.842">
            <ScrollViewer x:Name="ReportGrd" Margin="0,0,0,10">
                <Grid x:Name="DailyReportGD"
                      Width="1056"
                      Height="Auto"
                      MinHeight="495"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top"
                      Background="White"
                      DataContext="{Binding}">
                    <Grid Width="Auto"
                          Height="38"
                          Margin="40,97,0,0"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Background="#FFD7D7D7">
                        <TextBlock Width="346"
                                   Height="36"
                                   Margin="388,2,42,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top"
                                   FontSize="21.333"
                                   Foreground="#FF353623"
                                   Text="{Binding PayrollJobTotal,
                                                  StringFormat=Gross Job Amount \{0:c\}}"
                                   TextAlignment="Right" />
                    </Grid>
                    <TextBlock Width="314"
                               Height="31.8"
                               Margin="460,65.2,42,0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               Background="White"
                               FontSize="25"
                               Foreground="Black"
                               Text="Customs Sales Report"
                               TextAlignment="Right"
                               TextWrapping="Wrap" />
                    <TextBlock Width="228"
                               Margin="546,13,42,0"
                               HorizontalAlignment="right"
                               VerticalAlignment="Top"
                               FontSize="14.667"
                               Foreground="Black"
                               Text="{Binding Date}"
                               TextAlignment="Right" />
                    <StackPanel Height="Auto"
                                Margin="40,140,20,10"
                                Orientation="Vertical">
                        <TextBlock Width="237"
                                   Height="24"
                                   Margin="0,15,0,15"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   FontSize="20"
                                   Foreground="#FF393939"
                                   Text="{Binding CurrentAsycudaDocument.ReferenceNumber}"
                                   TextAlignment="Left"
                                   TextWrapping="Wrap" />
                        <DataGrid x:Name="GridData"
                                  Margin="0"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Top"
                                  AlternatingRowBackground="#FFE6F0F4"
                                  AutoGenerateColumns="False"
                                  ColumnHeaderHeight="60"
                                  ColumnHeaderStyle="{DynamicResource WrappedColumnHeaderStyle}"
                                  GridLinesVisibility="None"
                                  ItemsSource="{Binding SalesReportData}"
                                  LoadingRow="GridData_LoadingRow"
                                  RowBackground="White"
                                  RowHeight="25">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="60"
                                                    Binding="{Binding Line}"
                                                    Header="Line Number" />
                                <DataGridTextColumn Width="75"
                                                    Binding="{Binding Date,
                                                                      StringFormat=d}"
                                                    Header="Date" />
                                <DataGridTextColumn Width="60"
                                                    Binding="{Binding InvoiceNo}"
                                                    Header="Invoice#" />
                                <DataGridTextColumn Width="100"
                                                    Binding="{Binding CustomerName}"
                                                    Header="Customer Name" />
                                <DataGridTextColumn Width="100"
                                                    Binding="{Binding ItemNumber}"
                                                    Header="Item Number" />
                                <DataGridTextColumn Width="200"
                                                    Binding="{Binding ItemDescription}"
                                                    Header="Item Description" />
                                <DataGridTextColumn Width="75"
                                                    Binding="{Binding TariffCode}"
                                                    Header="TariffCode" />
                                <DataGridTextColumn Width="60"
                                                    Binding="{Binding SalesQuantity}"
                                                    Header="SalesQuantity" />
                                <DataGridTextColumn Width="60"
                                                    Binding="{Binding SalesFactor}"
                                                    Header="SalesFactor" />
                                <DataGridTextColumn Width="60"
                                                    Binding="{Binding xQuantity}"
                                                    Header="xQuantity" />
                                <DataGridTextColumn Width="50"
                                                    Binding="{Binding Price,
                                                                      StringFormat=c}"
                                                    Header="Price" />
                                <DataGridTextColumn Width="50"
                                                    Binding="{Binding SalesType}"
                                                    Header="Sales Type" />
                                <DataGridTextColumn Width="50"
                                                    Binding="{Binding GrossSales,
                                                                      StringFormat=c}"
                                                    Header="Gross Sales" />
                                <DataGridTextColumn Width="70"
                                                    Binding="{Binding PreviousCNumber}"
                                                    Header="Previous CNumber" />
                                <DataGridTextColumn Width="60"
                                                    Binding="{Binding PreviousLineNumber}"
                                                    Header="Previous Line Number" />
                                <DataGridTextColumn Width="60"
                                                    Binding="{Binding PreviousRegDate,
                                                                      StringFormat=d}"
                                                    Header="Previous Reg Date" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                    <TextBlock Width="243.2"
                               Height="29.6"
                               Margin="37.3,13.4,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="24"
                               Text="{Binding Institution1.Name}"
                               TextWrapping="Wrap" />
                    <TextBlock Width="243.2"
                               Height="20"
                               Margin="37.3,48,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="16"
                               Text="{Binding AccountName}"
                               TextWrapping="Wrap" />
                    <TextBlock Width="321"
                               Height="24"
                               Margin="40,73,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="16"
                               FontWeight="Bold"
                               Text="{Binding CurrentPayrollJob.Name}"
                               TextWrapping="Wrap" />
                </Grid>
            </ScrollViewer>
        </Border>
        <TextBlock Width="167"
                   Height="30"
                   Margin="879,10,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontFamily="Segoe UI Symbol"
                   FontSize="20"
                   MouseLeftButtonDown="PrintReport"
                   Style="{DynamicResource TextButtonStyle}"
                   Text="Send to Excel &#xE1A5;"
                   TextWrapping="Wrap" />
        <TextBlock Width="243"
                   Height="30"
                   Margin="577,10,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontFamily="Segoe UI Symbol"
                   FontSize="20"
                   MouseLeftButtonDown="ExportDocSetReport"
                   Style="{DynamicResource TextButtonStyle}"
                   Text="Export All in Document Set"
                   TextWrapping="Wrap" />
    </Grid>
</UserControl>
